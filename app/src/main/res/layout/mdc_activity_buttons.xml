<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_common"
        app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_common"
        app:fabSize="mini"
        android:layout_gravity="right"
        app:shapeAppearance="?attr/shapeAppearance"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:text="add"
        app:icon="@drawable/ic_add_black_24dp"
        android:textAllCaps="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_two_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_common"
        app:fabSize="mini"
        android:layout_gravity="center"
        app:shapeAppearance="?attr/shapeAppearance"
        app:srcCompat="@drawable/ic_add_black_24dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_two_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_common"
        app:fabSize="mini"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:shapeAppearance="?attr/shapeAppearance"
        app:srcCompat="@drawable/ic_add_black_24dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_two_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_common"
        app:fabSize="mini"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:shapeAppearance="?attr/shapeAppearance"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_two_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_common"
        app:fabSize="mini"
        android:visibility="invisible"
        android:layout_gravity="center"
        app:shapeAppearance="?attr/shapeAppearance"
        app:srcCompat="@drawable/ic_add_black_24dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>